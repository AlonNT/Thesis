{
  "path": "./experiments/",
  "device": "cpu",
  "epochs": 50,
  "batch_size": 64,
  "optimizer_params":
  {
    "lr": 3e-5,
    "weight_decay": 0,
    "momentum": 0.9
  },
  "architecture":
  [
    { "type": "conv", "args": { "in_channels": 3, "out_channels": 8, "kernel_size": 5, "padding": 2 } },
    { "type": "BatchNorm2d", "args": { "num_features": 8 } },
    { "type": "pool", "args": { "kernel_size": 2, "stride": 2 } },
    { "type": "relu", "args": {} },
    { "type": "conv", "args": { "in_channels": 8, "out_channels": 16, "kernel_size": 5, "padding": 2 } },
    { "type": "BatchNorm2d", "args": { "num_features": 16 } },
    { "type": "pool", "args": { "kernel_size": 2, "stride": 2 } },
    { "type": "relu", "args": {} },
    { "type": "affine", "args": { "in_features": 1024, "out_features": 256} },
    { "type": "BatchNorm1d", "args": { "num_features": 256 } },
    { "type": "relu", "args": {} },
    { "type": "affine", "args": { "in_features": 256, "out_features": 256} },
    { "type": "BatchNorm1d", "args": { "num_features": 256 } },
    { "type": "relu", "args": {} },
    { "type": "affine", "args": { "in_features": 256, "out_features": 10} }
  ],
  "DNI":
  {
    "positions": [0, 4, 8, 11]
  }
}